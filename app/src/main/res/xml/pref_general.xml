<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="@string/pref_key_default_host"
        android:title="@string/pref_title_default_host"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <SwitchPreference
        android:key="@string/pref_key_line_wrap"
        android:title="@string/pref_title_line_wrap"
        android:summaryOff="@string/pref_line_wrap_summary_off"
        android:summaryOn="@string/pref_line_wrap_summary_on"
        android:defaultValue="@bool/pref_value_line_wrap" />

    <EditTextPreference
        android:key="@string/pref_key_cache_time"
        android:title="@string/pref_title_cache_time"
        android:defaultValue="@string/pref_value_cache_time"
        android:singleLine="true"
        android:numeric="integer" />
</PreferenceScreen>
