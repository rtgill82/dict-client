<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/search_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:hint="@string/search_text_hint"
        android:imeOptions="actionSearch"
        android:inputType="text|textAutoCorrect|textAutoComplete"
        android:textSize="20sp"
        android:maxLines="@integer/search_text_max_lines" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/dictionary_spinner"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/dictinfo_button"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/search_text"
        android:layout_toLeftOf="@+id/dictinfo_button" />
    
    <Button
        android:id="@+id/dictinfo_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/search_text"
        android:onClick="getDictionaryInfo"
        android:text="@string/dictinfo_button_text" />

    <org.lonestar.sdf.locke.apps.dict.dictclient.DictTextView
        android:id="@+id/dict_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/dictinfo_button"
        android:scrollbars="vertical"
        android:freezesText="true"
        android:paddingLeft="@dimen/definition_padding_left"
        android:paddingRight="@dimen/definition_padding_right"
        android:paddingTop="@dimen/definition_padding_top" />

</RelativeLayout>
