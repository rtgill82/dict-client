<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/search_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:hint="@string/hint_search"
        android:imeOptions="actionSearch"
        android:inputType="text|textAutoCorrect|textAutoComplete"
        android:textSize="20sp"
        android:maxLines="@integer/search_text_max_lines" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/dict_spinner"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/dictinfo_button"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/search_text"
        android:layout_toLeftOf="@+id/dictinfo_button" />

    <ImageButton
        android:id="@+id/dictinfo_button"
        android:src="@drawable/ic_info_outline"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/search_text"
        android:onClick="getDictionaryInfo" />

    <org.lonestar.sdf.locke.apps.dictclient.DictTextView
        android:id="@+id/dict_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/dictinfo_button"
        android:scrollbars="vertical"
        android:freezesText="true"
        android:padding="@dimen/text_padding" />

</RelativeLayout>
